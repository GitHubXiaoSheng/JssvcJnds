<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.Fragment_item_2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="红绿灯信息管理"
        android:textColor="#000"
        android:textSize="30dp"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排序："
            android:textColor="#000"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/trafficmang_sort_spinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="红绿灯信息管理"
            android:entries="@array/frag2_spinner"/>


        <Button
            android:id="@+id/trafficmang_query_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="查询"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/boder"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="路口"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/boder"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="红灯时长（S）"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/boder"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="黄灯时长（S）"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/boder"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="绿灯时长（S）"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/boder"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/trafficmang_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"/>
</LinearLayout>