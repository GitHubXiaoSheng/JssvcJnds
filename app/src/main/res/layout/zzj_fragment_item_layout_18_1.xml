<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="100dp"
            android:textSize="30dp"
            android:text="请选择消息内容："/>

        <Spinner
            android:id="@+id/zzj_fragment18_1_spinner"
            android:layout_width="300dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="200dp"
            android:background="@drawable/zzj_background_1"
            android:text="序号"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@drawable/zzj_background_1"
            android:text="报警类型"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/zzj_background_1"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="阈值"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:background="@drawable/zzj_background_1"
            android:layout_marginRight="200dp"
            android:text="当前值"/>

    </LinearLayout>

    <TextView
        android:id="@+id/zzj_fragment_18_1_NoData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前还未有报警信息"
        android:textSize="30dp"
        android:layout_marginTop="100dp"
        android:gravity="center"/>

    <ListView
        android:id="@+id/zzj_fragment_18_1_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"/>

</LinearLayout>