<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/yws_hz1"
            android:layout_margin="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/icon101"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="紫外线指数"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:textColor="#00BFFF"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_ziwaixian_dengji"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="24dp"
                    />
                <TextView
                    android:textSize="20dp"
                    android:id="@+id/tv_ziwaixian_miaoshu"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/yws_hz2"
            android:layout_margin="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/icon102"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="感冒指数"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="24dp"
                    android:textColor="#00BFFF"
                    android:id="@+id/tv_ganmao_dengji"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:textSize="20dp"
                    android:id="@+id/tv_ganmao_miaoshu"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/yws_hz3"
            android:layout_margin="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/icon103"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="穿衣指数"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:textSize="24dp"
                    android:textColor="#00BFFF"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_chuaiyi_dengji"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:textSize="20dp"
                    android:id="@+id/tv_chuaiyi_miaoshu"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:orientation="horizontal">

      <LinearLayout
          android:id="@+id/yws_hz4"
          android:layout_margin="15dp"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_weight="1">
          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">
              <ImageView
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:background="@drawable/icon104"
                  />
              <TextView
                  android:layout_marginTop="20dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="运动指数"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">
              <TextView
                  android:textColor="#00BFFF"
                  android:layout_marginTop="10dp"
                  android:textSize="24dp"
                  android:id="@+id/tv_sport_dengji"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  />
              <TextView
                  android:textSize="20dp"
                  android:id="@+id/tv_sport_miaoshu"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"/>

          </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:id="@+id/yws_hz5"
          android:layout_margin="15dp"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1">
          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">
              <ImageView
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:background="@drawable/icon105"
                  />
              <TextView
                  android:layout_marginTop="20dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:text="空气污染扩散指数"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">
              <TextView
                  android:textColor="#00BFFF"
                  android:layout_marginTop="10dp"
                  android:textSize="24dp"
                  android:id="@+id/tv_kongqi_dengji"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  />
              <TextView
                  android:textSize="20dp"
                  android:id="@+id/tv_kongqi_miaoshu"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:layout_weight="1"/>

          </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_margin="15dp"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1">


      </LinearLayout>
  </LinearLayout>

</LinearLayout>