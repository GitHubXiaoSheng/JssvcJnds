<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00BFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="我的座驾"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginLeft="120dp"/>

        <TextView
            android:id="@+id/zzj_User_textView"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="当前用户：XXX"
            android:textColor="#FFFFFF"
            android:gravity="center|left"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment7_Fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/zzj_wodeyu_e_textView_f7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:textSize="18dp"
            android:text="我的余额"/>

        <TextView
            android:id="@+id/zzj_yuanchengkongzhi_textView_f7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18dp"
            android:text="远程控制"/>

        <TextView
            android:id="@+id/zzj_chongzhijilu_textView_f7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="100dp"
            android:gravity="center"
            android:textSize="18dp"
            android:text="充值记录"/>

    </LinearLayout>

</LinearLayout>