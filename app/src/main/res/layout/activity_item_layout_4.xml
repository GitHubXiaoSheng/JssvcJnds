<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Activity_Item_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#56abe4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_back"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/left_2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:paddingRight="54dp"
                android:text="标题"
                android:textColor="#ffffff"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/tv_refresh"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="30sp"
                android:layout_marginRight="30sp"
                android:background="@drawable/refresh" />
        </RelativeLayout>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp">

                <LinearLayout
                    android:id="@+id/tv_ll"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#0062ff">

                    <TextView
                        android:id="@+id/tv_iv"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/icon101" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_ll"
                    android:textColor="#000"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/tv_nj_tem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="100sp"
                    android:textSize="32sp" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预报"
                android:textColor="#000"
                android:textSize="35sp" />

            <GridView
                android:id="@+id/gv"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:numColumns="6">


            </GridView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="生活指数"
                android:textColor="#000"
                android:textSize="35sp" />

            <include layout="@layout/activity4_child" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>