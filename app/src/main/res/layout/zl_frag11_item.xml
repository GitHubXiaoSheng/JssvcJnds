<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/boder"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/frag11item_road_tv"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:text="路口"
        android:textSize="@dimen/frag11_textsize"
        android:background="@drawable/boder"
        />
    <TextView
        android:id="@+id/frag11item_red_tv"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:text="红灯时长（S）"
        android:background="@drawable/boder"
        android:textSize="@dimen/frag11_textsize"/>
    <TextView
        android:id="@+id/frag11item_yellow_tv"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:text="黄灯时长（S）"
        android:background="@drawable/boder"
        android:textSize="@dimen/frag11_textsize"/>
    <TextView
        android:id="@+id/frag11item_green_tv"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:text="绿灯时长（S）"
        android:background="@drawable/boder"
        android:textSize="@dimen/frag11_textsize"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/boder"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/frag11item_choose_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/boder"
        android:orientation="horizontal">
        <Button
            android:id="@+id/frag11item_set_btn"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            android:background="@drawable/boder"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="设置"/>
    </LinearLayout>
</LinearLayout>