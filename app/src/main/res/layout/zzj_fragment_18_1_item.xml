<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/zzj_fragment_18_1_item_xuhao"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/zzj_background_1"
        android:text="序号"/>

    <TextView
        android:id="@+id/zzj_fragment_18_1_item_leixing"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:background="@drawable/zzj_background_1"
        android:text="报警类型"/>

    <TextView
        android:id="@+id/zzj_fragment_18_1_item_yuzhi"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/zzj_background_1"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="阈值"/>

    <TextView
        android:id="@+id/zzj_fragment_18_1_item_dangqianzhi"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:background="@drawable/zzj_background_1"
        android:text="当前值"/>

</LinearLayout>