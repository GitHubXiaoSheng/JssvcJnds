            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/weizhang02"
            android:layout_height="200dp"
            android:layout_margin="18dp"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/weizhang03"
            android:layout_height="200dp"
            android:layout_margin="18dp"/>
        <ImageView
            android:id="@+id/img4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/weizhang04"
            android:layout_height="200dp"
            android:layout_margin="18dp"/>
    </LinearLayout>


</LinearLayout>