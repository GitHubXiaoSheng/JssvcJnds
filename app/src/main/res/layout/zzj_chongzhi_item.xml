<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/zzj_item_xuhao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="200dp"
            android:background="@drawable/zzj_background_1"
            android:text="序号"/>
        <TextView
            android:id="@+id/zzj_item_chehao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/zzj_background_1"
            android:text="车号"/>
        <TextView
            android:id="@+id/zzj_item_chongzhijine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/zzj_background_1"
            android:text="充值金额(元)"/>
        <TextView
            android:id="@+id/zzj_item_caozuoren"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/zzj_background_1"
            android:text="操作人"/>
        <TextView
            android:id="@+id/zzj_item_chongzhishijian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="200dp"
            android:background="@drawable/zzj_background_1"
            android:text="充值时间"/>

    </LinearLayout>

</LinearLayout>