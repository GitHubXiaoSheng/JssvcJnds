<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ZL_SpotInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#09c">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详细信息"
            android:textColor="#fff"
            android:textSize="@dimen/frag11_textsize" />

        <TextView
            android:id="@+id/spotinfo_back_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/left_2"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="80sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/spotinfo_img"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="景点介绍:"
                    android:textColor="#000"
                    android:textSize="@dimen/frag11_textsize"/>
                <TextView
                    android:id="@+id/spotinfo_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="景点名称"
                    android:textColor="#000"
                    android:textSize="@dimen/frag11_textsize"
                    android:layout_marginBottom="80dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游客点评"
                    android:textColor="#000"
                    android:textSize="@dimen/frag11_textsize"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/spotinfo_index1_tv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textSize="@dimen/frag11_textsize"
                        android:gravity="center"
                        android:background="@drawable/zl_frag6_cboder_2"
                        android:layout_marginRight="10dp"
                        android:textColor="#000"/>
                    <TextView
                        android:id="@+id/spotinfo_index2_tv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textSize="@dimen/frag11_textsize"
                        android:gravity="center"
                        android:background="@drawable/zl_frag6_cboder_2"
                        android:layout_marginRight="10dp"
                        android:textColor="#000"/>
                    <TextView
                        android:id="@+id/spotinfo_index3_tv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textSize="@dimen/frag11_textsize"
                        android:gravity="center"
                        android:background="@drawable/zl_frag6_cboder_2"
                        android:layout_marginRight="10dp"
                        android:textColor="#000"/>
                    <TextView
                        android:id="@+id/spotinfo_index4_tv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textSize="@dimen/frag11_textsize"
                        android:gravity="center"
                        android:background="@drawable/zl_frag6_cboder_2"
                        android:layout_marginRight="10dp"
                        android:textColor="#000"/>
                    <TextView
                        android:id="@+id/spotinfo_index5_tv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textSize="@dimen/frag11_textsize"
                        android:gravity="center"
                        android:background="@drawable/zl_frag6_cboder_2"
                        android:layout_marginRight="10dp"
                        android:textColor="#000"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textColor="#000"
                    android:textSize="@dimen/frag11_textsize"/>
                <TextView
                    android:id="@+id/spotinfo_tel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游客点评"
                    android:textColor="#000"
                    android:textSize="@dimen/frag11_textsize"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>